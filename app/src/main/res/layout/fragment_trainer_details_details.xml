<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDarkTransparent"
    tools:context=".trainer.TrainerDetailsDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/ten_dp"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:text="@string/chip"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorAccent2" />

        <TextView
            android:id="@+id/tvDetailsDetailsChip"
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="3"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textColor="@color/colorAccent2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/ten_dp"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:text="@string/pet_name"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorAccent2" />

        <TextView
            android:id="@+id/tvDetailsDetailsPetName"
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="3"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textColor="@color/colorAccent2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/ten_dp"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:text="@string/breed"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorAccent2" />

        <TextView
            android:id="@+id/tvDetailsDetailsBreed"
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="3"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textColor="@color/colorAccent2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/ten_dp"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:text="@string/owner_name"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorAccent2" />

        <TextView
            android:id="@+id/tvDetailsDetailsOwnerName"
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="3"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textColor="@color/colorAccent2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/ten_dp"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:text="@string/phone_number"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorAccent2" />

        <TextView
            android:id="@+id/tvDetailsDetailsPhone"
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="3"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textColor="@color/colorAccent2" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/three_dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/ten_dp"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:text="@string/group"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorAccent2" />

        <TextView
            android:id="@+id/tvDetailsDetailsGroup"
            android:layout_width="0dp"
            android:layout_height="@dimen/twenty_five_dp"
            android:layout_weight="3"
            android:paddingStart="@dimen/five_dp"
            android:paddingEnd="@dimen/one_dp"
            android:textSize="@dimen/dialog_fragment_text_size"
            android:textColor="@color/colorAccent2" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/three_dp"
        android:background="@android:color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trainingsTextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginStart="@dimen/ten_dp"
                android:paddingStart="@dimen/five_dp"
                android:paddingEnd="@dimen/one_dp"
                android:layout_alignParentStart="true"
                android:text="@string/trainings"
                android:textSize="@dimen/dialog_fragment_text_size"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <ListView
                android:id="@+id/trainingsListView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/trainingsTextView" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>